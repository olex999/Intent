<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="400dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#49B5DD"
            android:gravity="center"
            android:text="Data Mahasiswa"
            android:textColor="#1A1818"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/logouty"
            tools:srcCompat="@drawable/logouty" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#49B5DD"
            android:textSize="3sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#49B5DD"
            android:layout_marginTop="5dp"
            android:textSize="3sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:hint="Nim"
            android:ems="10"
            android:id="@+id/tx_item_nim"
            android:textSize="16sp"
            android:textColor="#1A1818"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item_nama"
            android:layout_marginTop="5dp"
            android:hint="Nama"
            android:ems="10"
            android:textSize="16sp"
            android:textColor="#1A1818"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="textCapWords"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item_nilai"
            android:layout_marginTop="5dp"
            android:hint="Nilai"
            android:ems="10"
            android:textSize="16sp"
            android:textColor="#1A1818"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_item_proses"
            android:text="PROSES"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>